<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    
    <Frame name="EHFrame" parent="UIParent" enableMouse="true" movable="true" clampedToScreen="true">
        <Size x="400" y="30"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <TitleRegion setAllPoints="true"/>   
        <Frames>
            <StatusBar name="$parentMaxEHBar"  parentKey="MaxEHBar">
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset x="0" y="0"/>
                    </Anchor>
                </Anchors>
                <Size x="400" y="30"/>
              
                <BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
                <BarColor r="1" g="0" b="0" a="1"/>
            </StatusBar>
            <StatusBar name="$parentEHBar" parentKey="EHBar">
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
                <Size x="400" y="30"/>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentText" inherits="GameFontNormal" justifyH="LEFT" justifyV="MIDDLE" text="80 / 100" minValue="0" maxValue="100" value="80">
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset x="0" y="0"/>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
           
                <BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
                <BarColor r=".25" g="1.0" b=".25" a="1"/>
            </StatusBar>
        </Frames>
    </Frame>
    
</Ui>
